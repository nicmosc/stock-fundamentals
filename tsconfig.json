{
  "compilerOptions": {
    "moduleResolution": "node",
    "esModuleInterop": true,
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "ES2019",
    "lib": ["ES2020", "DOM"],
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "noUnusedLocals": false, // revert
    "noUnusedParameters": false, // revert
    "strict": true,
    "paths": {
      "~/*": ["./src/*"]
    }
  }
}
